<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include
        layout="@layout/head_layout"></include>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <ImageView
            android:id="@+id/register_resut_img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72px"
            android:layout_centerInParent="true"
            android:src="@drawable/zc_result"/>

        <TextView
            android:id="@+id/register_result_text_tips"
            android:layout_below="@id/register_resut_img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36px"
            android:text="您已成功注册IX会员"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <Button
        android:id="@+id/register_result_btn_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:background="@drawable/shape_button"
        android:textColor="@color/white"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:textSize="34px"
        android:text="开通存管账户"/>

    <TextView
        android:id="@+id/register_result_text_protocol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:textColor="@color/text_gray"
        android:textSize="28px"
        android:text="为了保障您的资金安全，IX已接入上海银行资金存管系统，依据国家政策请在交易前开通银行存管账户"/>

</com.zhy.autolayout.AutoLinearLayout>
