<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical">
    <include
        layout="@layout/head_layout"></include>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16px"
        android:layout_marginLeft="40px"
        android:layout_marginBottom="16px"
        android:textColor="@color/text_red"
        android:textSize="28px"
        android:text="请输入当前账户登录密码验证身份"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="250px"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="40px"
            android:textSize="32px"
            android:textColor="@color/text_default"
            android:text="账户"/>

        <TextView
            android:id="@+id/check_account_text_phone"
            android:layout_width="400px"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="32px"
            android:hint="13476183516"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_marginLeft="40px"
            style="@style/Line"></View>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="250px"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="40px"
            android:textSize="32px"
            android:textColor="@color/text_default"
            android:text="登录密码"/>

        <com.crf.ix.widget.view.ClearEditText
            android:id="@+id/check_account_edit_password"
            android:layout_width="400px"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:background="@null"
            android:maxLength="18"
            android:textSize="32px"
            android:hint="请输入登录密码"
            android:inputType="textPassword"
            android:lines="1"/>

    </com.zhy.autolayout.AutoLinearLayout>


    <Button
        android:id="@+id/check_account_btn_check"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:textSize="34px"
        android:background="@drawable/shape_button"
        android:textColor="@color/white"
        android:text="验证"
        android:layout_marginTop="100px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"/>

</com.zhy.autolayout.AutoLinearLayout>
