<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/popup_bond_text_lable_outdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="150px"
        android:textColor="@color/text_default"
        android:text="是否逾期"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/popup_bond_rl_outdate"
        android:layout_below="@id/popup_bond_text_lable_outdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="160px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="未逾期"/>
        <TextView
            android:layout_marginLeft="50px"
            android:layout_width="160px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="未逾期"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/popup_bond_text_lefe_date_lable"
        android:layout_below="@id/popup_bond_rl_outdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="60px"
        android:textColor="@color/text_default"
        android:text="剩余天数"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/popup_bond_linear_lefe_date"
        android:layout_below="@id/popup_bond_text_lefe_date_lable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="160px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1-30天"/>
        <TextView
            android:layout_marginLeft="50px"
            android:layout_width="160px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="31-90天"/>
        <TextView
            android:layout_marginLeft="50px"
            android:layout_width="160px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="91-180天"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/popup_bond_text_lefe_date180"
        android:layout_below="@+id/popup_bond_linear_lefe_date"
        android:layout_marginLeft="30px"
        android:layout_width="160px"
        android:layout_marginTop="30px"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="28px"
        android:text="180天以上"/>

    <TextView
        android:id="@+id/popup_bond_text_income_lable"
        android:layout_below="@id/popup_bond_text_lefe_date180"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="60px"
        android:textColor="@color/text_default"
        android:text="预期收益"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/popup_bond_linear_income"
        android:layout_below="@+id/popup_bond_text_income_lable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="5-8%"/>
        <TextView
            android:layout_marginLeft="50px"
            android:layout_width="160px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="8-12%"/>
        <TextView
            android:layout_marginLeft="50px"
            android:layout_width="160px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="≥13%"/>
    </com.zhy.autolayout.AutoLinearLayout>



    <TextView
        android:id="@+id/popup_bond_text_discount_lable"
        android:layout_below="@id/popup_bond_linear_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="60px"
        android:textColor="@color/text_default"
        android:text="折让比例"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/popup_bond_linear_discount"
        android:layout_below="@id/popup_bond_text_discount_lable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        android:orientation="horizontal">
        <EditText
            android:layout_width="160px"
            android:layout_height="wrap_content"
            android:text="10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:text="% -"/>

        <EditText
            android:layout_width="160px"
            android:layout_height="wrap_content"
            android:text="10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_weight="1"
            android:background="@color/text_gray"
            android:textColor="@color/text_blue"
            android:gravity="center"
            android:textSize="32px"
            android:text="清除"/>
        <TextView
            android:id="@+id/popup_bond_linear_text_confirm"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="32px"
            android:textColor="@color/white"
            android:background="@color/text_blue"
            android:text="确认"/>
    </com.zhy.autolayout.AutoLinearLayout>



</com.zhy.autolayout.AutoRelativeLayout>
