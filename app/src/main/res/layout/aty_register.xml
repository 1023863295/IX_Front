<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        layout="@layout/head_layout"></include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_default"
        android:layout_marginLeft="50px"
        android:layout_marginTop="76px"
        android:textSize="40px"
        android:text="验证手机号并设置您的登录密码"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/edit_hint_color"
        android:layout_marginTop="23px"
        android:layout_marginLeft="50px"
        android:textSize="40px"
        android:text="短信验证码发送至122332"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px">
        <com.crf.ix.widget.view.ClearEditText
            android:id="@+id/register_edit_code"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:lines="1"
            android:inputType="number"
            android:maxLength="6"
            android:textSize="34px"
            android:hint="123456"/>
        <TextView
            android:id="@+id/register_text_send_code"
            android:layout_width="182px"
            android:layout_height="40px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/start_color"
            android:text="60后发送"/>

    </com.zhy.autolayout.AutoRelativeLayout>
    
    <View
        android:layout_marginTop="40px"
        style="@style/Line"
        android:layout_marginRight="50px"
        android:layout_marginLeft="50px">
    </View>


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px">
        <com.crf.ix.widget.view.ClearEditText
            android:id="@+id/register_edit_password"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="18"
            android:textSize="32px"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="设置6-18位字母、数字组合的登录密码"/>
        <ImageView
            android:id="@+id/register_img_reveal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:src="@drawable/hide"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <Button
        android:id="@+id/register_btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="100px"
        android:textSize="34px"
        android:background="@drawable/shape_button"
        android:textColor="@color/white"
        android:text="完成注册"/>

    <TextView
        android:id="@+id/register_text_protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:text="点击“完成注册”即表示您已同意《IX用户协议》"/>

</com.zhy.autolayout.AutoLinearLayout>
