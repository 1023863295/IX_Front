<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:paddingTop="520px">

    <include
        layout="@layout/head_layout"></include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24px"
        android:textColor="@color/text_blue"
        android:textSize="32px"
        android:text="提现金额：4000.00"/>

    <com.crf.ix.widget.view.PasswordView
        android:id="@+id/input_text_password_view"
        android:layout_width="match_parent"
        android:layout_height="78px"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingRight="0px"
        android:paddingLeft="0px"
        android:layout_marginTop="32px"
        app:passwordPadding="30px"
        android:background="@color/white"
        app:borderWidth="1px"
        app:mode="rect"
        app:cipherEnable="false"
        app:passwordLength="6" />
    <TextView
        android:id="@+id/input_text_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="36px"
        android:layout_marginTop="10px"
        android:textColor="@color/dialog_confirm"
        android:text="忘记密码"/>


</com.zhy.autolayout.AutoLinearLayout>
