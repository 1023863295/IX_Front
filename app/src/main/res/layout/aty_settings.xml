<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical">

    <include
        layout="@layout/head_layout"></include>

    <com.crf.ix.widget.view.OptionItemView
        android:id="@+id/setting_modify_login_password"
        android:layout_width="match_parent"
        android:layout_height="100px"
        app:left_text_margin_left="50px"
        app:right_src="@drawable/arrow_right"
        android:background="@drawable/selector_common_item"
        app:left_text="修改登录密码"/>

    <View
        android:layout_marginLeft="44px"
        style="@style/Line"></View>

    <com.crf.ix.widget.view.OptionItemView
        android:id="@+id/setting_gestuer_password"
        android:layout_width="match_parent"
        android:layout_height="100px"
        app:left_text_margin_left="50px"
        app:right_src="@drawable/arrow_right"
        android:background="@drawable/selector_common_item"
        app:left_text="手势密码"/>


    <View
        android:layout_marginLeft="44px"
        style="@style/Line"></View>

    <com.crf.ix.widget.view.OptionItemView
        android:id="@+id/setting_deal_password"
        android:layout_width="match_parent"
        android:layout_height="100px"
        app:left_text_margin_left="50px"
        app:right_src="@drawable/arrow_right"
        android:background="@drawable/selector_common_item"
        app:left_text="交易密码"/>


    <View
        android:layout_marginLeft="44px"
        style="@style/Line"></View>

    <com.crf.ix.widget.view.OptionItemView
        android:id="@+id/setting_feedback"
        android:layout_width="match_parent"
        android:layout_height="100px"
        app:left_text_margin_left="50px"
        app:right_src="@drawable/arrow_right"
        android:background="@drawable/selector_common_item"
        app:left_text="意见反馈"/>


    <TextView
        android:id="@+id/setting_text_logout"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="60px"
        android:gravity="center"
        android:background="@drawable/selector_common_item"
        android:textSize="34px"
        android:textColor="@color/text_red"
        android:text="退出登录"/>

</com.zhy.autolayout.AutoLinearLayout>
