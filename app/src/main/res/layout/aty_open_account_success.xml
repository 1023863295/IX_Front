<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include
        layout="@layout/head_layout"></include>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <ImageView
            android:id="@+id/open_account_succ_img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72px"
            android:layout_centerInParent="true"
            android:src="@drawable/open_account_logo"/>

        <TextView
            android:id="@+id/open_account_succ_text_result"
            android:layout_below="@id/open_account_succ_img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36px"
            android:text="您的存管账户开通成功"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <Button
        android:id="@+id/open_account_succ_btn_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:background="@drawable/shape_button"
        android:textColor="@color/white"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:textSize="34px"
        android:text="设置交易密码"/>

    <TextView
        android:id="@+id/open_account_succ_text_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:textColor="@color/text_gray"
        android:textSize="28px"
        android:text="交易密码在您投资、充值、提现均会验证"/>

</com.zhy.autolayout.AutoLinearLayout>
