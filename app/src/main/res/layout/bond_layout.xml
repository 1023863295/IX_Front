<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300px"
    android:background="@drawable/bond_card_bg"
    android:paddingLeft="50px"
    android:paddingTop="38px"
    android:paddingBottom="50px"
    android:paddingRight="60px"
    android:layout_marginLeft="20px"
    android:layout_marginRight="20px"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bond_layout_card_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="30px"
        android:text="债权标题XXX"/>


    <TextView
        android:id="@+id/bond_layout_card_text_rate"
        android:layout_below="@id/bond_layout_card_text_title"
        android:layout_marginTop="55px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="58px"
        android:text="12.00%"/>


    <TextView
        android:id="@+id/bond_layout_card_text_allowance"
        android:layout_alignBottom="@id/bond_layout_card_text_rate"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="34px"
        android:text="4500"/>



    <TextView
        android:id="@+id/bond_layout_card_text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bond_layout_card_text_rate"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:textSize="34px"
        android:text="450.00"/>

    <TextView
        android:id="@+id/bond_layout_card_text_rate_lable"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:paddingLeft="5px"
        android:textSize="22px"
        android:text="债权标题XXX"/>

    <TextView
        android:id="@+id/bond_layout_card_text_allowance_lable"
        android:layout_alignBottom="@id/bond_layout_card_text_rate_lable"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="22px"
        android:text="转让价格(元)"/>

    <TextView
        android:id="@+id/bond_layout_card_text_price_lable"
        android:layout_alignBottom="@id/bond_layout_card_text_rate_lable"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="22px"
        android:text="债权价值(元)"/>



</com.zhy.autolayout.AutoRelativeLayout>
