<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/default_bg"
    android:orientation="vertical">
    <include
        layout="@layout/head_layout"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20px"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include
                    layout="@layout/bond_layout"></include>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="37px"
                    android:layout_marginTop="66px"
                    android:background="@drawable/left_date_bg"
                    android:layout_alignParentRight="true"
                    android:paddingRight="35px"
                    android:paddingLeft="20px"
                    android:gravity="center_vertical"
                    android:layout_marginRight="10px"
                    android:textColor="@color/white"
                    android:textSize="22px"
                    android:text="剩余15天"/>
            </com.zhy.autolayout.AutoRelativeLayout>



            <com.crf.ix.widget.view.OptionItemView
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_marginTop="20px"
                app:left_text_size="16dp"
                app:right_text_size="16dp"
                app:left_text_color="@color/text_gray"
                android:background="@color/white"
                app:left_text="是否逾期"
                app:right_text="未逾期"/>

            <View
                android:layout_marginLeft="50px"
                style="@style/Line"></View>
            <com.crf.ix.widget.view.OptionItemView
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                app:left_text_size="16dp"
                app:right_text_size="16dp"
                android:background="@color/white"
                app:left_text_color="@color/text_gray"
                app:left_text="折让比例"
                app:right_text="12%"/>

            <View
                android:layout_marginLeft="50px"
                style="@style/Line"></View>
            <com.crf.ix.widget.view.OptionItemView
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                app:left_text_size="16dp"
                app:right_text_size="16dp"
                android:background="@color/white"
                app:left_text_color="@color/text_gray"
                app:left_text="剩余本金"
                app:right_text="30000.00"/>

            <View
                android:layout_marginLeft="50px"
                style="@style/Line"></View>
            <com.crf.ix.widget.view.OptionItemView
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                app:left_text_size="16dp"
                app:right_text_size="16dp"
                android:background="@color/white"
                app:left_text_color="@color/text_gray"
                app:left_text="剩余收益"
                app:right_text="40.00"/>

            <com.crf.ix.widget.view.OptionItemView
                android:id="@+id/bond_detail_option_plan"
                android:layout_marginTop="30px"
                android:layout_marginBottom="30px"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                app:left_text_size="16dp"
                app:right_text_size="16dp"
                app:left_text_color="@color/text_default"
                android:background="@color/white"
                app:left_text="还款计划"
                app:right_src="@drawable/arrow_right"/>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginLeft="20px"
                android:paddingLeft="20px"
                android:textSize="34px"
                android:paddingTop="30px"
                android:textColor="@color/text_default"
                android:text="借款人信息"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginLeft="20px"
                android:paddingTop="30px"
                android:paddingLeft="20px"
                android:textSize="32px"
                android:textColor="@color/text_default"
                android:text="姓名  王**"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginLeft="20px"
                android:paddingTop="30px"
                android:paddingLeft="20px"
                android:textSize="32px"
                android:textColor="@color/text_default"
                android:text="性别  男"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginLeft="20px"
                android:paddingTop="30px"
                android:paddingBottom="30px"
                android:paddingLeft="20px"
                android:textSize="32px"
                android:textColor="@color/text_default"
                android:text="年龄  52岁"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20px"
                android:background="@color/white">
                <View
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    style="@style/Line"></View>

            </LinearLayout>

            <com.crf.ix.widget.view.OptionItemView
                android:id="@+id/bond_detail_option_detail"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@color/white"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                app:right_text_size="16dp"
                app:left_text="查看详情"
                app:right_src="@drawable/arrow_right"/>

            <Button
                android:id="@+id/bond_detail_btn_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:textColor="@color/white"
                android:background="@drawable/shape_button"
                android:textSize="34px"
                android:text="立即购买"/>


        </com.zhy.autolayout.AutoLinearLayout>

    </ScrollView>

</com.zhy.autolayout.AutoLinearLayout>
