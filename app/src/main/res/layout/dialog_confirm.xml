<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:paddingTop="64px"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_confirm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#FF888888"
        android:paddingLeft="42px"
        android:paddingRight="42px"
        android:textSize="30px"
        android:text="@string/loading_title"/>

    <View
        style="@style/Line"
        android:layout_marginTop="48px"
        android:layout_marginLeft="42px"
        android:layout_marginRight="42px"></View>

    <TextView
        android:id="@+id/dialog_confirm_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="24px"
        android:paddingTop="32px"
        android:textColor="@color/dialog_confirm"
        android:background="@drawable/bottom_corner_selected"
        android:text="我知道了"
        android:textSize="36px" />

</com.zhy.autolayout.AutoLinearLayout>
